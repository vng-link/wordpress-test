doctype html

include ../components

block variables

html(lang="ru")
  head
    title=title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Global")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    //- используйте только для шрифта находящегося на первом экране
    //- link(rel="preload", href="fonts/placeholder.woff2", as="font", crossorigin="anonymous")
    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true

    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content="Заголовок")
      //- Введите заголовок путь к картинке
      meta(property="og:image", content="https://test.ru/img/content/open-graph.png")
      //- Введите необходимый тип
      meta(property="og:type", content="article")
      //- Введите адрес сайта
      meta(property="og:url", content="https://test.ru/")
      //- Введите описание
      meta(property="og:description", content="Описание")

    link(rel="preload", href="fonts/Lato-Regular.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/Lato-SemiBold.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/Lato-Bold.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/Lato-ExtraBold.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/main.min.js")
    script(src="js/vendor.min.js")
